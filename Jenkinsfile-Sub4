pipeline {
    agent any

    environment {
        EC2_HOST = '34.227.52.230'  // Địa chỉ IP của máy EC2
    }

    stages {
        stage('Deploy to EC2') {
            steps {
                // Bước này để triển khai mã nguồn lên máy EC2
                script {
                    sshagent(['groups deployuser']) {
                        sh "scp -o StrictHostKeyChecking=no -r * deployuser@${EC2_HOST}:/var/www/html/"
                    }
                }
            }
        }
    }
}
